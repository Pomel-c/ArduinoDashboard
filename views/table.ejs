<!DOCTYPE html>
<html>
<head>
  <title>Arduino Data</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="/socket.io/socket.io.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center;
    }
    th {
      background-color: #007bff;
      color: white;
      position: sticky;
      top: 0;
    }
  </style>
</head>
<body>
  <h1>Arduino Data</h1>
  <table id="data">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Tensi√≥n</th>
        <th>Temperatura</th>
        <th>Corriente</th>
        <th>RPM</th>
      </tr>
    </thead>
    <tbody id="dataBody">
    </tbody>
  </table>

  <script>
    const socket = io.connect();
  
    socket.on('arduino:data', (data) => {

      let voltaje = data[0];
      let temperatura = data[1];
      let corriente = data[2];
      let rpm = data[3];

      ((v, r, c, f) => f(v, r, c))(voltaje, rpm, corriente, (v, r, c) => ((v <= 10 && r <= 5) ? ((corriente = 0), (voltaje = 0)) : null)); 

      const row = `<tr><td>${new Date().toLocaleString()}</td><td>${voltaje}</td><td>${temperatura}</td><td>${corriente}</td><td>${rpm}</td></tr>`;
      const tbody = document.getElementById('dataBody');
      tbody.innerHTML = row + tbody.innerHTML;
    });
  </script>
</body>
</html>
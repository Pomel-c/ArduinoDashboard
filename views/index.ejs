<% include('partials/header'); %>

<% block('title'); %>Sistema de Monitoreo - Home<% endblock %>

<% block('content'); %>
    <h1 class="mb-4">Sistema de Monitoreo</h1>
    
    <!-- Tarjetas de motores con diseÃ±o mejorado -->
    <div class="row">
        <% motors.forEach(function(motor) { %>
        <div class="col-md-4">
            <div class="card motor-card">
                <div class="card-body">
                    <h5 class="card-title"><%= motor.name %></h5>
                    <p class="card-text">Poder: <span class="real-time-data"><%= motor.power %> HP</span></p>
                    <div class="power-bar" style="width: <%= motor.power * 20 %>%; margin-bottom: 10px;">
                        <div class="power-bar-fill"></div>
                    </div>
                    <a href="/motor_details/<%= motor.id %>" class="btn btn-primary">Detalles</a>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
<% endblock %>

<% include('partials/footer'); %>
